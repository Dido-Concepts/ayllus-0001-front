---
import { nuestroEquipoBodyService, nuestroEquipoHeaderService } from '@src/context/quienes-somos/services/nuestroEquipo.service'
import HeaderPage from '@src/components/HeaderPage.component.astro'
import SectionLogo from '@src/components/SectionLogo.component.astro'
import SectionPV from '@src/context/quienes-somos/section/SectionNE.section.astro'
import Layout from '@src/layouts/Layout.astro'

const title = 'Nuestro equipo'

const headerData = await nuestroEquipoHeaderService()
const data = await nuestroEquipoBodyService()

---

<Layout title={title}>
  <HeaderPage title={title} imagen={headerData.imageHeader} />

  {
    data.map((section) => (
      <SectionPV title={section.nombre_oficina} items={section.CardPersonal} />
    ))
  }

  <SectionLogo />
</Layout>
