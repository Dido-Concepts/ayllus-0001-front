---
import Layout from '@src/layouts/Layout.astro'
import SectionPv from '@src/context/quienes-somos/section/SectionPV.section.astro'
import HeaderPage from '@src/components/HeaderPage.component.astro'
import SectionLogo from '@src/components/SectionLogo.component.astro'
import {
  principiosValoresBodyService,
  principiosValoresHeaderService
} from '@src/context/quienes-somos/services/principiosValores.service'

const data = await principiosValoresBodyService()
const headerData = await principiosValoresHeaderService()

const title = 'Principios y Valores';
---

<Layout title={title}>
  <HeaderPage title={title} imagen={headerData.imageHeader} />

  {
    data.map((section) => (
      <SectionPv title={section.title} items={section.items} />
    ))
  }

  <SectionLogo />
</Layout>
