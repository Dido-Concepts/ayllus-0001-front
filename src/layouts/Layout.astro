---
import '@fontsource-variable/onest'
import Navbar from '@src/components/Navbar.component.astro'
import Footer from '@src/components/Footer.component.astro'
import { keywords } from '@src/constantes/keywords.const'
import WhatsappFloatButton from '@src/components/WhatsappFloatButton.component.astro'

interface Props {
	title?: string;
}

const { title } = Astro.props as Props

let titleLayout = 'Cooperativa Ayllus Per√∫'

if (title) {
  titleLayout = `${title} | ${titleLayout}`
}
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={keywords.join(', ')} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{titleLayout}</title>
	</head>
	<body class="relative">
		<Navbar />
		<slot />
		<Footer />
		<WhatsappFloatButton />
	</body>
</html>

<style is:global>
	body {
		font-family: "Onest Variable", sans-serif;
		background-color: #FCF5FF;
	}
</style>
