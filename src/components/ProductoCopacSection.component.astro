---
import CardProductCopac from '@src/components/CardProductCopac.component.astro'
import type { ProductCopacInfosData } from '@src/interfaces/ProductCopac'
import type { Image } from '@src/interfaces/Image'

interface Props {
    title: string;
    descripcion: string;
    imagen: Image ;
    products: ProductCopacInfosData[];
}

const { title, descripcion, products, imagen } = Astro.props as Props;
---

<section class="my-12">
    <div
        class="py-8 mx-auto max-w-screen-xl px-4 sm:px-6 lg:px-8 border-b-2 border-ayllus-primary"
    >
        <div
            class="w-full px-6 py-10 sm:px-10 sm:py-14 bg-ayllus-primary rounded-2xl flex flex-col gap-5 relative bg-cover bg-center"
            style={`background-image: url(${imagen.url});`}
        >
            <div
                class="absolute inset-0 bg-gradient-to-t from-[#49006B] to-transparent rounded-2xl"
            >
            </div>
            <div class="relative z-10">
                <h1
                    class="text-4xl sm:text-5xl md:text-6xl font-extrabold text-white"
                >
                    {title}
                </h1>
                <p
                    class="text-xl sm:text-2xl md:text-3xl font-normal text-white"
                >
                    {!(descripcion === '-') && descripcion}
                </p>
            </div>
        </div>

        <div
            class="grid grid-cols-1 sm:grid-cols-2 gap-8 md:gap-12 place-items-center mt-8"
        >
            {
                products.map((product) => (
                    <CardProductCopac
                        title={product.titulo}
                        image={product.imagen}
                        link={product.link}
                    />
                ))
            }
        </div>
    </div>
</section>
