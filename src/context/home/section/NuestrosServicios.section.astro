---
const SERVICIOS = [
  {
    title: 'Créditos',
    bgImg: '/home/quienes_somos/creditobg.webp',
    description: [
      'Créditos negocios',
      'Crédito consumo',
      'Crédito a sola firma'
    ],
    link: '/creditos'
  },
  {
    title: 'Ahorros',
    bgImg: '/home/quienes_somos/ahorrosbg.webp',
    description: ['Ahorro Libre', 'Plazo Fijo', 'Ahorro Programado'],
    link: '/ahorros'
  }
];
---

<section class="w-full relative py-14 bg-[#FCF5FF]">
    <h1
        class="text-center w-full text-2xl md:text-3xl xl:text-5xl font-extrabold text-ayllus-secondary my-12"
    >
        Nuestros Servicios
    </h1>

    <div class="flex flex-col md:flex-row gap-4">
        {
            SERVICIOS.map((servicio, index) => (
                <div
                    class={`w-full md:w-1/2 lg:w-1/3 flex-1 bg-cover bg-center py-20 grid place-items-center ${index === 0 ? 'rounded-r-3xl' : 'rounded-l-3xl'}`}
                    style={`background-image: url(${servicio.bgImg});`}
                >
                    <div class="max-w-fit flex flex-col gap-8 p-4  rounded-xl">
                        <h1 class="text-3xl md:text-4xl xl:text-5xl font-extrabold text-white">
                            {servicio.title}
                        </h1>

                        <ul class="flex flex-col gap-2">
                            {servicio.description.map((desc) => (
                                <li class="bg-ayllus-secondary px-3 py-1 max-w-fit rounded-full text-white font-medium text-lg md:text-xl xl:text-2xl">
                                    {desc}
                                </li>
                            ))}
                        </ul>

                        <a
                            href={servicio.link}
                            class="bg-white border-2 font-semibold hover:text-white hover:bg-ayllus-secondary text-ayllus-secondary max-w-fit px-8 py-1 rounded-full"
                        >
                            Ver más
                        </a>
                    </div>
                </div>
            ))
        }
    </div>
</section>
