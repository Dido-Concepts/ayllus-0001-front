---
import CardOficina from '../components/CardOficina.component.astro'

const OFICINAS = [
  { title: 'Oficina Ayacucho', image: '/ayacucho.jpg', address: 'Jr. Sol 373' },
  { title: 'Oficina Pichari', image: '/pichari.jpg', address: 'Jr. Sol 373' },
  { title: 'Oficina Vraem', image: '/ayacucho.jpg', address: 'Jr. Sol 373' }
]

---

<section class="w-full h-[90svh] relative py-14 bg-[#FCF5FF]">
  <h1
    class="text-center w-full text-2xl md:text-3xl xl:text-7xl font-extrabold text-ayllus-secondary"
  >
    Oficinas
  </h1>

  <div class="swiper mt-12" id="mySwiperOficinas">
    <div class="swiper-wrapper">
      {
        OFICINAS.map(oficina => (
          <CardOficina title={oficina.title} image={oficina.image} address={oficina.address} />
        ))
      }
    </div>
    <!-- PaginaciÃ³n -->
    <div class="swiper-pagination block xl:hidden"></div>
  </div>
</section>

<script>
import Swiper from 'swiper/bundle'
import { EffectCoverflow } from 'swiper/modules'

import 'swiper/css/bundle'
import 'swiper/css/effect-coverflow'
import 'swiper/css/pagination'

const swiper = new Swiper('#mySwiperOficinas', {
  modules: [EffectCoverflow],
  slidesPerView: 'auto',
  centeredSlides: true,
  spaceBetween: 200,
  loop: true,
  effect: 'coverflow',
  pagination: {
    el: '.swiper-pagination',
    clickable: true
  },
  breakpoints: {
    640: {
      slidesPerView: 1,
      spaceBetween: 20
    },

    768: {
      slidesPerView: 2,
      spaceBetween: 40
    },

    1024: {
      slidesPerView: 'auto',
      spaceBetween: 200
    }
  },
  coverflowEffect: {
    rotate: 0,
    stretch: 70,
    depth: 70,
    modifier: 1,
    slideShadows: false
  }
})
swiper.init()
</script>

<style>
  .swiper {
    width: 100%;
    height: 60%;
  }

</style>
