---
import ItemPV from '@src/context/quienes-somos/components/ItemPV.component.astro'

interface Item {
  title: string;
  img: string;
  description: string;
}

interface Props {
  title: string;
  items: Item[];
}

const { items, title } = Astro.props as Props;
---

<section class="p-8">
  <div class="max-w-3xl mx-auto p-6 rounded-lg">
    <h1
      class="md:text-left text-center text-4xl md:text-3xl xl:text-7xl font-extrabold text-ayllus-primary mb-12"
    >
      {title}
    </h1>

    <div class="flex flex-col gap-4">
      {
        items.map((item) => (
          <ItemPV title={item.title} description={item.description} img={item.img} />
        ))
      }
    </div>
  </div>
</section>
